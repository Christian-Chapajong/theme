{# Extend page template #}
{% extends 'templates/page.twig' %}

{% set title = 'Style Guide' %}
{% set hideTitle = 0 %}
{% set hideTitleBar = 0 %}
{% set side_list = 0 %}
{% set full_width = 1 %}
{% set bodyClass = 'sg-page' %}

{% block page_content %}
    <div class="row page-container" data-equalizer data-equalize-on="medium">
        <div class="{{ side_list and side_list.links ? 'large-9 large-push-3' : 'small-12' }} column" data-equalizer-watch>
            <div class="page__inner">
                <a class="sg-collapse-all">Collapse all</a>
                {# varaibles #}
                <section class="sg-section">
                    <h2>
                        <span>Variables</span>
                    </h2>
                    <ul class="accordion" data-accordion data-allow-all-closed="true" data-multi-expand="true">

                        {% set colour_count = 0 %}
                        {% for key, value in gts %}
                            {% if 'color_' in key %}
                                {% set colour_count = colour_count + 1 %}
                            {% endif %}
                        {% endfor %}

                        {# colour settings / SCSS variables #}
                        {% if colour_count %}
                            <li class="accordion-item is-active" data-accordion-item>
                                <a href="#" class="accordion-title">
                                    Colours
                                </a>
                                <div class="accordion-content" data-tab-content>
                                    <div class="row small-up-2 medium-up-3 large-up-4">
                                        {% for key, value in gts %}
                                            {% if 'color_' in key %}
                                                <div class="column">
                                                    <div class="sg-colour card">
                                                        <div class="card-divider sg-swatch" style="background: {{ value }}"></div>
                                                        <div class="card-section sg-colour__title">
                                                            <dl>
                                                                <dt>
                                                                    SCSS variable
                                                                    <a class="sg-copy" data-copy="scss-{{ loop.index }}" title="copy ${{ key }}">
                                                                        {{ theme.sw_icon('copy') }}
                                                                    </a>
                                                                </dt>
                                                                <dd>
                                                                    <code id="scss-{{ loop.index }}">${{ key }}</code>
                                                                </dd>
                                                                <dt>
                                                                    Hexidecimal value
                                                                    <a class="sg-copy" data-copy="hex-{{ loop.index }}" title="copy {{ value }}">
                                                                        {{ theme.sw_icon('copy') }}
                                                                    </a>
                                                                </dt>
                                                                <dd>
                                                                    <code id="hex-{{ loop.index }}">{{ value }}</code>
                                                                </dd>
                                                            </dl>
                                                        </div>
                                                    </div>
                                                </div>
                                            {% endif %}
                                        {% endfor %}
                                    </div>
                                </div>
                            </li>
                        {% endif %}
                        {# CSS breakpoints #}
                        <li class="accordion-item is-active" data-accordion-item>
                            <a href="#" class="accordion-title">
                                Responsive Breakpoints
                            </a>
                            <div class="accordion-content" data-tab-content>
                                <p>
                                    We use six major breakpoints in SCSS based on Zurb Foundation:
                                </p>
                                <ul>
                                    <li>
                                        <code>$s-only</code> for small screens
                                    </li>
                                    <li>
                                        <code>$m-up</code> for medium and above
                                    </li>
                                    <li>
                                        <code>$m-down</code> for medium and below
                                    </li>
                                    <li>
                                        <code>$m-only</code> for medium only
                                    </li>
                                    <li>
                                        <code>$l-up</code> for large and above
                                    </li>
                                    <li>
                                        <code>$l-only</code> for large only
                                    </li>
                                </ul>
                                <table>
                                    <tr>
                                        <th></th>
                                        <th>Small</th>
                                        <th>Medium</th>
                                        <th>Large</th>
                                    </tr>
                                    <tr>
                                        <td>REMs</td>
                                        <td>40</td>
                                        <td>64</td>
                                        <td>75</td>
                                    </tr>
                                    <tr>
                                        <td>Pixels</td>
                                        <td>640</td>
                                        <td>1024</td>
                                        <td>1200</td>
                                    </tr>
                                </table>
                                <p>
                                    Usage:
                                </p>
<pre>
// Applies to screens wider than the "large" breakpoint of 1200px
@media #{$l-up} {
    .foo {
        width: 100%;
    }
}
</pre>
                            </div>
                        </li>
                        <li class="accordion-item is-active" data-accordion-item>
                            <a href="#" class="accordion-title">
                                Theme Colours
                            </a>
                            {% set theme_colours = {
                                'black': '000000',
                                'white': 'ffffff',
                                'light grey': 'dddddd'
                            } %}
                            <div class="accordion-content" data-tab-content>
                                <div class="row small-up-2 medium-up-3 large-up-4">
                                    {% for key, value in theme_colours %}
                                        <div class="column">
                                            <div class="card sg-colour">
                                                <div class="card-divider sg-swatch" style="background: #{{ value }}"></div>
                                                <div class="card-section sg-colour__title">
                                                    <dl>
                                                        <dt>
                                                            Colour
                                                        </dt>
                                                        <dd>
                                                            <span>{{ key }}</span>
                                                        </dd>
                                                        <dt>
                                                            Hexidecimal value
                                                            <a class="sg-copy" data-copy="hex-colour-{{ loop.index }}" title="copy #{{ value }}">
                                                                {{ theme.sw_icon('copy') }}
                                                            </a>
                                                        </dt>
                                                        <dd>
                                                            <code id="hex-colour-{{ loop.index }}">#{{ value }}</code>
                                                        </dd>
                                                    </dl>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </li>
                    </ul>
                </section>

                {#section note #}
                <section class="sg-section">
                    <h2>
                        <span>Typography</span>
                    </h2>
                    <ul class="accordion" data-accordion data-allow-all-closed="true" data-multi-expand="true">
                        {# Headers #}
                        <li class="accordion-item is-active" data-accordion-item>
                            <a href="#" class="accordion-title">
                                Headers
                            </a>
                            <div class="accordion-content" data-tab-content>
                                <h1>h1. This is a very large header.</h1>
                                <h2>h2. This is a large header.</h2>
                                <h3>h3. This is a medium header.</h3>
                                <h4>h4. This is a moderate header.</h4>
                                <h5>h5. This is a small header.</h5>
                                <h6>h6. This is a tiny header.</h6>

                                <hr>

                                {% set headers = {
                                    'regular': 'Main page',
                                    'blog-post': 'Blog post',
                                    'stockists': 'Stockists',
                                    'account': 'Account',
                                    'galleries': 'Media',
                                    'newsletter': 'Newsletter Subscription'
                                    }
                                %}

                                {% for name, text in headers %}
                                    <h1 class="{{ name }}-header">
                                        {{ text }} Header
                                    </h1>
                                {% endfor %}
                            </div>
                        </li>
                        {# Subheaders #}
                        <li class="accordion-item is-active" data-accordion-item>
                            <a href="#" class="accordion-title">
                                Subheaders
                            </a>
                            <div class="accordion-content" data-tab-content>
