                                                <i class="sw-icon-{{ item }}" aria-hidden="true" style="font-size: 1rem;"></i>
                                                <i class="sw-icon-{{ item }}" aria-hidden="true" style="font-size: .7rem;"></i>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                                <hr>
                                <p>
                                    Usage:
                                </p>
<pre>
   &lt;i class="sw-icon-[name]" aria-hidden="true"&gt;
</pre>
                            </div>
                        </li>
                    </ul>
                </section>

                {# buttons #}
                <section class="sg-section">
                    <h2>
                        <span>Controls</span>
                    </h2>
                    <ul class="accordion" data-accordion data-allow-all-closed="true" data-multi-expand="true">
                        {# Buttons #}
                        <li class="accordion-item is-active" data-accordion-item>
                            <a href="#" class="accordion-title">
                                Buttons
                            </a>
                            <div class="accordion-content" data-tab-content>

                                <div class="row">
                                    <div class="column large-3">
                                        <button type="submit" class="button expanded" href="#">Create your account</button>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="column large-6">
                                        <button type="submit" class="button large expanded" href="#">Proceed to secure checkout</button>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="column large-3">
                                        <button type="submit" name="paypal_gateway" value="1" class="button image-button paypal-button expanded">
                                            <span class="show-for-sr">Checkout with PayPal</span>
                                            <img src="https://www.paypalobjects.com/webstatic/en_US/i/btn/png/gold-rect-paypalcheckout-60px.png" alt="Check out with PayPal" width="170">
                                        </button>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="column large-4">
                                        <a class="button border" href="#">
                                            <span class="text-top">Browse images</span>
                                        </a>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="column large-3">
                                        <a class="button large secondary" href="#">Continue shopping</a>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="column large-6">
                                        <button type="submit" class="button third expanded" href="#">Sorry! We're currently out of stock, get notified here</button>
                                    </div>
                                </div>
                                <div class="row column">
                                    <a class="button quick-view-button" href="#">quick view</a>
                                </div>
                                <div class="margin-top">
                                    <a href="" class="icon-button"><i class="sw-icon-heart-1" aria-hidden="true"></i></a>
                                </div>
                                <div class="margin-top">
                                    <a href="" class="icon-button"><i class="sw-icon-heart" aria-hidden="true"></i></a>
                                </div>
                                <br>
                                <div class="row">
                                    <div class="column large-5">
                                        <div class="basket-voucher">
                                            <div class="input-group mod-custom">
                                                <input class="input-group-field" type="text" placeholder="Enter your voucher/promotion code">
                                                <div class="input-group-button">
                                                    <button type="submit" class="button">Apply</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <br>
                                <div class="padding" style="background-color: #ffe256">
                                    <div class="row">
                                        <div class="column large-6">
                                            <div class="input-group mod-simple no-margin">
                                                <input class="input-group-field" type="text" placeholder="Enter your email address">
                                                <div class="input-group-button">
                                                    <button type="submit" class="button">Subscribe</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <br>
                                <div class="padding" style="background-color: #f9f9f9">
                                    <div class="row">
                                        <div class="column large-7">
                                            <div class="input-group mod-custom mod-search no-margin">
                                                <span class="input-group-label">
                                                    <i aria-hidden="true" class="sw-icon-musica-searcher"></i>
                                                </span>
                                                <input class="input-group-field" type="text" placeholder="Search by town, city or postcode">
                                                <div class="input-group-button">
                                                    <button type="submit" class="button">Go</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </li>
                    </ul>
                </section>

                {# Forms #}
                <section class="sg-section">
                    <h2>
                        <span>Forms</span>
                    </h2>
                    <ul class="accordion" data-accordion data-allow-all-closed="true" data-multi-expand="true">
                        {# sub note #}
                        <li class="accordion-item is-active" data-accordion-item>
                            <a href="#" class="accordion-title">
                                Form components
                            </a>
                            <div class="accordion-content" data-tab-content>
                                {# form components #}
                                <div class="row">
                                    <div class="medium-6 column">
                                        {# text input #}
                                        <label>
                                            <span class="field-label">
                                                Input Label
                                            </span>
                                            <input type="text" placeholder="">
                                        </label>
                                        {# textarea #}
                                        <label>
                                            <span class="field-label">
                                                Textarea input
                                            </span>
                                            <textarea placeholder=""></textarea>
                                        </label>
                                        {# select #}
                                        <label>
                                            <span class="field-label">
                                                Select Menu
                                            </span>
                                            <select>
                                                <option value="foo">Foo</option>
                                                <option value="bar">Bar</option>
                                                <option value="baz">Baz</option>
                                            </select>
                                        </label>
                                        <br>
                                        {# file input #}
                                        <label class="field-label">Please upload your files</label>
                                        <input type="file" name="files[]">
                                        <br><br>
                                        {# radio buttons #}
                                        <fieldset class="row column">
                                            <legend class="field-label">Radio buttons</legend>
                                            <input type="radio" name="foo" value="Red" id="fooRed" required><label for="fooRed">Red</label>
                                            <input type="radio" name="foo" value="Blue" id="fooBlue"><label for="fooBlue">Blue</label>
                                            <input type="radio" name="foo" value="Yellow" id="fooYellow"><label for="fooYellow">Yellow</label>
                                        </fieldset>
                                        <br>
                                        {# checkboxes #}
                                        <fieldset class="row column">
                                            <legend class="field-label">Checkboxes</legend>
                                            <input id="checkbox1" type="checkbox"><label for="checkbox1">Checkbox 1</label>
                                            <input id="checkbox2" type="checkbox"><label for="checkbox2">Checkbox 2</label>
                                            <input id="checkbox3" type="checkbox"><label for="checkbox3">Checkbox 3</label>
                                        </fieldset>
                                        <br>
                                        {# date field #}
                                        <span class="field-label">Preferred Delivery Date</span>
                                        <div class="delivery-date-container">
                                            <input type="text" name="delivery_date" class="hasDatepicker">
                                        </div>
                                        <br>
                                    </div>
                                </div>

                                {# input group #}
                                <div class="padding" style="background-color: #f9f9f9">
                                    <div class="row">
                                        <div class="column large-7">
                                            <div class="search-container">
                                                <div class="input-group mod-custom mod-search no-margin">
                                                    <span class="input-group-label">
                                                        <i aria-hidden="true" class="sw-icon-musica-searcher"></i>
                                                    </span>
                                                    <input class="input-group-field" type="text" placeholder="Search by town, city or postcode">
                                                    <div class="input-group-button">
                                                        <button type="submit" class="button">Go</button>
                                                    </div>

                                                    <button class="close-search btn-close">
                                                        <span>Close</span>
                                                    </button>

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                {# /form components #}
                            </div>
                        </li>
                        <li class="accordion-item is-active" data-accordion-item>
                            <a href="#" class="accordion-title">
                                Contact Form
                            </a>
                            <div class="accordion-content" data-tab-content>
                                {# contact form #}
                                <form action="{{ global.current_url }}" method="post" class="form-with-validation">
                                    <div class="row">
                                        <div class="column large-6">
                                            <label>
                                                <span class="field-label">Your Name</span>
                                                {{ html.input('name', form_field_value('name'), 'form-control required') }}
                                            </label>
                                        </div>
                                        <div class="column large-6">
                                            <label>
                                                <span class="field-label">Your Telephone Number</span>
                                                {{ html.input('phone', form_field_value('phone'), 'form-control') }}
                                            </label>
                                        </div>
                                    </div>
                                    <label>
                                        <span class="field-label">Your Email Address</span>
                                        {{ html.input('email', form_field_value('email'), 'form-control required') }}
                                    </label>
                                    <label>
                                        <span class="field-label">Your Enquiry</span>
                                        {{ html.textarea('message', form_field_value('message'), 'form-control required', '') }}
                                    </label>
                                    <div class="row">
                                        <div class="column medium-6 large-3">
                                            {{ shopwired.honeypot() }}
                                            <button type="submit" class="button expanded">Send your message</button>
                                        </div>
                                    </div>
                                </form>
                                {# / contact form #}
                            </div>
                        </li>
                    </ul>
                </section>

                {# components #}
                <section class="sg-section">
                    <h2>
                        <span>Components</span>
                    </h2>
                    <ul class="accordion" data-accordion data-allow-all-closed="true" data-multi-expand="true">
                        <li class="accordion-item is-active" data-accordion-item>
                            <a href="#" class="accordion-title">
                                Announcement Bar
                            </a>
                            <div class="accordion-content" data-tab-content>
                                {# announcment bar #}
                                <div class="announcement-bar hide callout no-margin" data-closable>
                                    <div class="row column">
                                        <div class="inner">
                                            <span>{{ theme.text_snippet('announce') }}</span>
                                            <button class="close-button announcement-bar-close btn-close" aria-label="Dismiss alert" type="button" data-close>
                                            <span>Close</span>
                                        </button>
                                        </div>
                                    </div>
                                </div>
                                {# / announcment bar #}
                            </div>
                        </li>
                        <li class="accordion-item is-active" data-accordion-item>
                            <a href="#" class="accordion-title">
                                Brand Text (No logo image)
                            </a>
                            <div class="accordion-content" data-tab-content>
                                {# header no logo text #}
                                <a href="/" class="header-logo">
                                    <span class="logo-text">
                                        {{ global.business.name }}
                                    </span>
                                </a>
                                {# / header no logo text #}
                            </div>
                        </li>
                        <li class="accordion-item is-active" data-accordion-item>
                            <a href="#" class="accordion-title">
                                Product images
                            </a>
                            <div class="accordion-content" data-tab-content>
                                {# product images #}
                                <div class="row product-container">
                                    <div class="column large-7">
                                        <!-- if product.photos > 1 add class "with-dots" -->
                                        <div class="product-image with-dots">
                                            <div role="region" aria-label="Product Images" class="product-main-image">
                                                <div class="main-image-slider">
                                                    {% for i in 1..10 %}
                                                        <div class="slide">
                                                            <div class="image-container product-gallery-main-photo"
                                                         data-fit="1"
                                                         data-zoom="{{ gts.product_zoom }}">
                                                                <img src="//via.placeholder.com/800/dddddd?text={{ i }}" alt="">
                                                            </div>
                                                        </div>
                                                    {% endfor %}
