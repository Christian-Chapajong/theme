                                    'forbidden',
                                    'glass',
                                    'calendar',
                                    'facebook',
                                    'gift',
                                    'refresh',
                                    'pdf',
                                    'map-marker',
                                    'twitter',
                                    'google-plus',
                                    'linkedin',
                                    'pinterest',
                                    'youtube',
                                    'instagram',
                                    'bell',
                                    'like',
                                    'bars',
                                    'glass-2',
                                    'caret-down',
                                    'caret-up',
                                    'star-on',
                                    'external-link',
                                    'plus-zoom',
                                    'grid',
                                    'caret-right',
                                    'circle-star',
                                    'gift1',
                                    'mail',
                                    'map',
                                    'padlock',
                                    'phone',
                                    'shopping-bag',
                                    'truck',
                                    'user',
                                    'down-arrow',
                                    'down-chevron',
                                    'left-arrow',
                                    'left-chevron',
                                    'move',
                                    'question',
                                    'right-arrow',
                                    'right-chevron',
                                    'search',
                                    'up-arrow',
                                    'up-chevron',
                                    'minus',
                                    'plus',
