{# Extend collection template #}
{% extends 'templates/collection.twig' %}

{% set title = category.title %}
{% set description = category.description %}
{% set show_sidebar = false %}

{% block sidebar %}

	{# Render category menu #}
	{% include 'partials/category_menu.twig' %}

{% endblock %}

{% block items %}

	{% if products is defined %}
		{# Render products #}
		{% include 'partials/items.twig' %}
	{% else %}
		{# Render categories #}
		{% include 'partials/items.twig' with { 'items': category.categories, 'item_type': 'category', 'classes': 'small-up-1 medium-up-2' } %}
	{% endif %}

{% endblock %}
