{% extends 'templates/account_pages.twig' %}

{% set title = address.id ? 'Edit Your Address' : 'Create A New Address' %}

{% block page_content %}
    <h1 class="sw-account-heading">
        <i class="icon-edit" aria-hidden="true"></i>
        <span>{{ title }}</span>
    </h2>
    <form action="{{ global.current_url }}" method="post" class="form-with-validation">
        <div class="row">
            <div class="column medium-6">
                <div class="sw-account-field">
                    <label class="sw-account-label">First Name</label>
                    <input class="sw-account-input" type="text" name="first_name" value="{{ address.first_name }}">
                </div>
            </div>
            <div class="column medium-6">
                <div class="sw-account-field">
                    <label class="sw-account-label">Last Name</label>
                    <input class="sw-account-input" type="text" name="last_name" value="{{ address.last_name }}">
                </div>
            </div>
        </div>
        <div class="sw-account-line-heading">
            <span>Account address</span>
        </div>
        <div class="sw-account-field">
            <label class="sw-account-label">1st Line Address</label>
            <input class="sw-account-input" type="text" name="line1" value="{{ address.line1 }}">
        </div>
        <div class="sw-account-field">
            <label class="sw-account-label">2nd Line Address</label>
            <input class="sw-account-input" type="text" name="line2" value="{{ address.line2 }}">
        </div>
        <div class="sw-account-field">
            <label class="sw-account-label">3rd Line Address</label>
            <input class="sw-account-input" type="text" name="line3" value="{{ address.line3 }}">
        </div>
        <div class="row">
            <div class="column medium-6">
                <div class="sw-account-field">
                    <label class="sw-account-label">Town/City</label>
                    <input class="sw-account-input" type="text" name="city" value="{{ address.city }}">
                </div>
            </div>
            <div class="column medium-6">
                <div class="sw-account-field">
                    <label class="sw-account-label">County/State</label>
                    <input class="sw-account-input" type="text"  name="province" value="{{ address.province }}">
                </div>
            </div>
        </div>
        <div class="row">
            <div class="column medium-6">
                <div class="sw-account-field">
                    <label class="sw-account-label">Postcode</label>
                    <input class="sw-account-input" type="text" name="postcode" value="{{ address.postcode }}">
                </div>
            </div>
            <div class="column medium-6">
                <div class="sw-account-field">
                    <label class="sw-account-label">Country</label>
                    <select class="sw-account-input" name="country_id" value="{{ address.country_id }}">
                        <option value="">Please select...</option>
                        {% for country in countries %}
                            <option value="{{ country.id }}"{% if country.id == address.country_id %} selected="selected"{% endif %}>
                                {{ country.name }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
            </div>
        </div>
        {{ theme.honeypot('hide') }}
        <button class="button sw-account-button" type="submit" name="save" value="1">Save these details</button>
    </form>
{% endblock %}

