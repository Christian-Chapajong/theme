{% extends 'templates/account_pages.twig' %}

{% set title = 'My Address Book' %}

{% block page_content %}
    {# ** ADDRESS BOOK ** #}
    <h2 class="sw-account-heading">
        <i class="icon-address-book" aria-hidden="true"></i>
        <span>Address Book</span>
    </h2>
    <a class="button sw-account-button" href="/account/address">Add a new address</a>
    <ul class="row small-up-1 medium-up-2 no-bullet" data-equalizer data-equalize-by-row="true">
        {% for address in global.customer.addresses %}
            <div class="column" data-equalizer-watch>
                <div class="sw-account-container-box">
                    <strong>{{ address.name }}</strong> <br>
                    {{ address.all|replace(',', '<br>')|raw }}
                    <div class="sw-account-container-box-footer">
                        <div class="row">
                            <div class="column small-6">
                                <a class="sw-account-icon-link" href="{{ address.url }}">
                                    <i class="icon-edit" aria-hidden="true"></i>
                                    <span>Edit</span>
                                </a>
                            </div>
                            <div class="column small-6 text-right">
                                <form action="{{ address.url }}" method="post">
                                    <input type="hidden" name="delete" value="1">
                                    <button type="submit" class="sw-account-icon-link js-remove-address">
                                        <i class="icon-delete" aria-hidden="true"></i>
                                        <span>Delete</span>
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </ul>
{% endblock %}